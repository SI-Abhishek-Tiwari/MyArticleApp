<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/txt_back_arrow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            android:backgroundTint="@color/white"/>
    </androidx.appcompat.widget.Toolbar>


   <TextView
       android:id="@+id/txt_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Title"
       android:textSize="22dp"
       android:layout_marginTop="12dp"
       app:layout_constraintTop_toBottomOf="@+id/Toolbar"
       app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:hint="Write Your Title here"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColorHint="@color/light_gray"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/edt_title"
        android:background="@color/light_gray"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v_1"
        android:text="Description"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_description"
        android:lines="5"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:hint="Write Your Description"
        android:gravity="top|start"
        android:textColorHint="@color/light_gray"/>

   <View
       android:id="@+id/v_2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       app:layout_constraintTop_toBottomOf="@+id/edt_description"
       android:background="@color/light_gray"/>

    <TextView
        android:id="@+id/txt_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Article"
        app:layout_constraintTop_toBottomOf="@+id/v_2"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/edt_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_article"
        app:layout_constraintStart_toStartOf="parent"
        android:lines="10"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:layout_marginTop="5dp"
        android:hint="Write down article"
        android:gravity="top|start"/>

    <View
        android:id="@+id/v_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_article"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_gray"/>

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Publish"
        android:backgroundTint="#051DB5"/>





</androidx.constraintlayout.widget.ConstraintLayout>